---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Footer from "../components/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/LogoMEPmini.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen  ">
		<SpeedInsights />
		<main id="root" >
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "ITC Bauhaus";
		src: url("../components/fonts/mepfont.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
	}

	html {
		font-family: ITC Bauhaus;
		background-color: #404040;
		scroll-behavior: smooth;
		scrollbar-width: none;
	}
	html,
	body {
		margin: 0;
		display: flex;
		flex-direction: column;
	}
	#root {
		flex: 1 0 auto; 
	}
	.naranjaMEP:hover {
		color: #c4901d;
	}
	.naranjaMEPT {
		color: #c4901d;
	}
	.bg-grisC {
		background-color: #7f7f7f;
	}
	footer {
		margin-top: auto;
	}
</style>
