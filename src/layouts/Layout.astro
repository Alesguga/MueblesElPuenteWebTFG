---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import  SpeedInsights  from "@vercel/speed-insights/astro"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/LogoMEPmini.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body >
		<SpeedInsights/>
		<Header />
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "ITC Bauhaus";
		src: url("../components/fonts/mepfont.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
	}

	/* Puedes definir estilos adicionales utilizando la fuente ITC Bauhaus aqu√≠ si lo deseas */

	html {
		font-family: ITC Bauhaus;
		background-color: #404040;
		scroll-behavior: smooth;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.naranjaMEP:hover {
		color: #c4901d;
	}
	.bg-grisC {
		background-color: #7f7f7f;
	}
</style>
