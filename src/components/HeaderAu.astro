---
import LogoMEP from "./icons/LogoMEP.astro"
import LogoMEPmini from "./icons/LogoMEPmini.astro"

const navItems = [
  {
    title: "Aparadores",
    label: "aparadores",
    url: "aparadores",
  },
  {
    title: "Entradas",
    label: "entradas",
    url: "entradas",
  },
  {
    title: "Mesas",
    label: "mesas",
    url: "mesas",
  },
  {
    title: "Varios",
    label: "varios",
    url: "varios",
  },
]
---
<div class="flex justify-center items-center mt-10">
  <nav class="flex py-2 px-14 text-xl font-medium rounded-lg gap-x-14 text-[#d47907] justify-center items-center flex-wrap">
      {
          navItems.map((link) => (
              <a
              class="relative block px-5 rounded-lg hover:shadow-xl py-2 naranjaMEP transition"
                  aria-label={link.label}
                  href={link.url}
              >
                  {link.title}
              </a>
          ))
      }
  </nav>
</div>

<style>
  @media (max-width: 640px) {
    .naranjaMEP {
      font-size: 14px;
    }
  }
</style>
