---
import HeaderMini from "../../components/HeaderMini.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Juveniles">
    <HeaderMini />
    <div class="flex-grow flex items-center justify-center mt-16 text-center">
        <h1 class="text-4xl tracking-widest text-[#d47907]">Juveniles</h1>
    </div>
    <div
        class="flex-grow flex flex-col md:flex-row items-center justify-center mt-16 mx-10 text-center gap-x-8 gap-y-5"
    >
        <div>
            <a href="/juveniles/infantiles">
                <img
                    src="/indexJu/juve-inf09.jpg"
                    class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                    alt="Descripción de la imagen 1"
                />
            </a>
            <h2 class="text-2xl text-[#d47907] mt-5">Infantiles</h2>
        </div>
        <div>
            <a href="/juveniles/juveniles">
                <img
                    src="/indexJu/juve-juve32.jpg"
                    class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                    alt="Descripción de la imagen 2"
                />
            </a>
            <h2 class="text-2xl text-[#d47907] mt-5">Juveniles</h2>
        </div>
        <div>
            <a href="/juveniles/rusticos">
                <img
                    src="/indexJu/juve-rus05.jpg"
                    class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                    alt="Descripción de la imagen 3"
                />
            </a>
            <h2 class="text-2xl text-[#d47907] mt-5">Rústicos</h2>
        </div>
    </div>
</Layout>
<style>
    html,
    body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
    }
</style>
