---
import HeaderMini from "../components/HeaderMini.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Bienvenido a Muebles el Puente.">
    <HeaderMini />
    <div class="flex items-center justify-center mt-16 text-center">
        <h1 class="text-4xl tracking-widest naranjaMEPT">Dormitorios</h1>
    </div>
    <div
        class="flex items-center justify-center mt-16 gap-x-10 mb-14 text-center"
    >
        <div>
            <img
                src="../../public/slider/dor1.jpg"
                class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                alt="Descripción de la imagen 1"
            />
            <h2 class="text-2xl text-white mt-5">Modernos</h2>
        </div>
        <div>
            <img
                src="../../public/slider/dor1.jpg"
                class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                alt="Descripción de la imagen 2"
            />
            <h2 class="text-2xl text-white mt-5">Contemporáneos</h2>
        </div>
        <div>
            <img
                src="../../public/slider/dor1.jpg"
                class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                alt="Descripción de la imagen 3"
            />
            <h2 class="text-2xl text-white mt-5">Rústicos</h2>
        </div>
    </div>
</Layout>
