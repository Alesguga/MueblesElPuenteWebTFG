---
import HeaderMini from "../../components/HeaderMini.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Salones">
    <HeaderMini />
    <div class="flex-grow flex items-center justify-center mt-16 text-center">
        <h1 class="text-4xl tracking-widest text-[#d47907]">Salones</h1>
    </div>
    <div
        class="flex-grow flex flex-col md:flex-row items-center justify-center mt-16 mx-10 text-center gap-x-8 gap-y-5"
    >
        <div>
            <a href="/salones/modernos">
                <img
                    src="/indexSa/salon-mod05.jpg"
                    class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                    alt="Descripción de la imagen 1"
                />
            </a>
            <h2 class="text-2xl text-[#d47907] mt-5">Modernos</h2>
        </div>
        <div>
            <a href="/salones/contemporaneos">
                <img
                    src="/indexSa/salon-cont05.jpg"
                    class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                    alt="Descripción de la imagen 2"
                />
            </a>
            <h2 class="text-2xl text-[#d47907] mt-5">Contemporáneos</h2>
        </div>
        <div>
            <a href="/salones/rusticos">
                <img
                    src="/indexSa/salon-rus05.jpg"
                    class="h-80 rounded-lg relative transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                    alt="Descripción de la imagen 3"
                />
            </a>
            <h2 class="text-2xl text-[#d47907] mt-5">Rústico , Industrial</h2>
        </div>
    </div>
</Layout>
<style>
    html,
    body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
    }
</style>
